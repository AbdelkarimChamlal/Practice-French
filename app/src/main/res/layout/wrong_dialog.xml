<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    android:layout_gravity="center"
    android:layout_height="350dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#ffff88"
        android:gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/sad_french"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/indie_font"
            android:textColor="#5353CA"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="WRONG ANSWERS"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:fontFamily="@font/indie_font"
                android:textStyle="bold"
                android:textColor="#ffff55"
                android:id="@+id/wrong_dialog_try"
                android:background="@drawable/btn_submit"
                android:layout_weight="2"
                android:text="Retry"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:textStyle="bold"
                android:id="@+id/wrong_dialog_skip"
                android:textColor="#ff3535"
                android:fontFamily="@font/indie_font"
                android:background="@drawable/btn_help"
                android:layout_weight="2"
                android:text="Skip"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
